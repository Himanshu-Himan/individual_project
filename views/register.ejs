<!DOCTYPE html>
<html>
  <link href="/css/style.css" rel="stylesheet" type="text/css" />
  <link rel="stylesheet" href="/css/load.css" type="text/css" />
  <script data-main="scripts/main.js" src="scripts/require.js"></script>
  <body
    class="background"
    onload="myFunction()"
    style="background-image: url('images/img1.jpg')"
  >
    <div id="loader"></div>

    <div style="display: none" id="myDiv" class="animate-bottom">
      <form action="/register" method="POST" style="border: 1px solid #ccc">
        <h1>Sign Up</h1>
        <p>Please fill in this form to create an account.</p>
        <div>
          <label for="name">Name</label>
          <input
            type="text"
            placeholder="Username"
            id="name"
            name="name"
            required
          />

          <label for="email">Email</label>
          <input
            type="email"
            placeholder="Email"
            id="email"
            name="email"
            required
          />

          <label for="password">Password</label>
          <input
            type="password"
            placeholder="Password"
            id="password"
            name="password"
            required
          />

          <button type="submit">Register</button>

          <label>
            <input
              type="checkbox"
              checked="checked"
              name="remember"
              style="margin-bottom: 15px"
            />
            <a style="color: rgb(14, 14, 14)">Remember me</a>

            <span class="psw"
              ><a style="color: rgb(22, 22, 22)">If already have an account</a
              ><a style="color: rgb(231, 232, 233)" href="/login"
                >Log In</a
              ></span
            >
          </label>

          <p>
            By creating an account you agree to our
            <a href="terms.html" style="color: rgb(231, 232, 233)"
              >Terms & Privacy</a
            >
          </p>
        </div>
      </form>
    </div>
    <a href="shop.html">
      <img
        src="images/hom_logo.png"
        alt="home"
        width="50"
        height="50"
        style="position: absolute; top: 0px; right: 0px"
        usemap="#map1"
      />
    </a>

    <script>
      var myVar;

      function myFunction() {
        myVar = setTimeout(showPage, 1000);
      }

      function showPage() {
        document.getElementById("loader").style.display = "none";
        document.getElementById("myDiv").style.display = "block";
      }
    </script>
  </body>
</html>
